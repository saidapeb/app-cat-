                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="17dp"
                android:paddingTop="5dp"
                android:src="@drawable/cat4"></ImageView>

        </RelativeLayout>

        <RelativeLayout
