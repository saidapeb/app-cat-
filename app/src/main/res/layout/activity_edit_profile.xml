<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".edit_profile"
    android:background="#716F81">


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profil" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:background="@drawable/loginbg"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        android:layout_marginTop="50dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textviewnama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nama Lengkap:"
                android:fontFamily="@font/daggersquare"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/textviewnama2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:fontFamily="@font/daggersquare"
                android:inputType="textCapWords"
                android:text="Juliana Silva"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:textSize="18sp" />


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:alpha="0.2"
            android:background="@color/white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/textviewemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Email :"
                android:fontFamily="@font/daggersquare"
                android:textColor="@color/white"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/textviewemail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="julianasilva@gmail.com"
                android:fontFamily="@font/daggersquare"
                android:textAlignment="viewEnd"
                android:inputType="textEmailAddress"
                android:background="@android:color/transparent"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textColor="@color/white"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:alpha="0.2"
            android:background="@color/white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/textviewmobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nomor Ponsel :"
                android:fontFamily="@font/daggersquare"
                android:textColor="@color/white"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/textviewmobile2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+628 5720 4203 21"
                android:fontFamily="@font/daggersquare"
                android:textAlignment="viewEnd"
                android:inputType="number"
                android:background="@android:color/transparent"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textColor="@color/white"/>

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:alpha="0.2"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp">


            <TextView
                android:id="@+id/textviewpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tanggal Lahir :"
                android:fontFamily="@font/daggersquare"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:text="31 Maret 1990"
                android:fontFamily="@font/daggersquare"
                android:textAlignment="viewEnd"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:textColor="@color/white"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:alpha="0.2"
            android:background="@color/white" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_save"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:text="Save"
        android:textSize="12sp"
        android:layout_marginRight="5dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_semibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/border_rounded_cornwe"/>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="Cancel"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:fontFamily="@font/montserrat_semibold"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/border_rounded_cornwe"/>

</androidx.constraintlayout.widget.ConstraintLayout>