<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#716F81"
    tools:context=".splash_screen">

    <TextView
        android:id="@+id/TopTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LET'S TAKE CARE OF THE CAT!"
        android:textColor="#FFFF"
        android:textSize="20dp"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/MiddleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do It Now."
        android:textColor="#e8e8eb"
        android:textSize="20dp"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintTop_toBottomOf="@id/TopTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/letsgo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/MiddleTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/login_fill__rounded_color"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:textAllCaps="false"
        android:text="Lets Go!"
        android:textColor="#ffff"
        android:textSize="16sp">

    </Button>

    <ImageView
        android:id="@+id/BottomTextView"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/splashbg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/letsgo" />
    <ImageView
        android:id="@+id/BottomTextView2"
        android:layout_marginTop="120dp"
        android:layout_width="350dp"
        android:layout_height="168dp"
        android:src="@drawable/logoss"
        app:layout_constraintTop_toBottomOf="@id/letsgo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/BottomsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOUR CATS"
        android:textColor="#FFFF"
        android:textSize="40dp"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintTop_toBottomOf="@id/letsgo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="310dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>