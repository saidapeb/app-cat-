<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#716F81"
    android:orientation="vertical"
    tools:context=".FindDetail">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/myfont">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_bold"
                android:paddingLeft="40dp"
                android:text="Find and Search"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="300dp"
            android:layout_height="340dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="230dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Nama: Aydel"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white"
            android:textSize="20dp" />
        <TextView
            android:layout_width="300dp"
            android:layout_height="340dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="255dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Jenis: Anggora"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white"
            android:textSize="20dp" />
        <TextView
            android:layout_width="300dp"
            android:layout_height="340dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="280dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Hub: +628 1242 0913 00"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white"
            android:textSize="20dp" />
        <TextView
            android:layout_width="300dp"
            android:layout_height="340dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="305dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Ciri-ciri : bulu belang seperti gambar ,memeiliki warna mata hijau, dengan bekas luka dibagian kaki . Terakhir dilihat ; Disekitaran jalan mangga depan mesjid dengan tidak memakai lonceng . Tolong hubungi saya jika melihat . Andin"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginLeft="100dp"
            android:paddingBottom="50dp"
            android:src="@drawable/kucing" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="120dp"
            android:paddingBottom="30dp"
            android:src="@drawable/serti" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="120dp"
            android:paddingBottom="30dp"
            android:src="@drawable/ss" />

    </RelativeLayout>

</LinearLayout>